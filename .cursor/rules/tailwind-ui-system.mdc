<div class="card">
  <div class="card-header">
    <h3 class="text-lg font-semibold">標題</h3>
  </div>
  <div class="card-body">
    <p class="text-gray-600">內容</p>
  </div>
  <div class="card-footer">
    <button class="btn-primary">操作</button>
  </div>
</div>

<!-- ❌ 錯誤：重複寫樣式 -->
